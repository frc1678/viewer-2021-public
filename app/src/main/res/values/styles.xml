<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tv_data_points_top_match_details">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:text">@string/data_points_texts_match_details</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tv_team_number_match_details">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:text">@string/team_number_match_details</item>
        <item name="android:textSize">35dp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
