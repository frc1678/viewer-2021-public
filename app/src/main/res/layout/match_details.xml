<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        style="@style/view_separator_horizontal"
        android:layout_height="3dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_header_one"
                style="@style/tv_data_points_top_match_details"
                android:textColor="@color/Blue" />

            <TextView
                android:id="@+id/tv_header_two"
                style="@style/tv_data_points_top_match_details"
                android:textColor="@color/Blue" />

            <TextView
                android:id="@+id/tv_header_three"
                style="@style/tv_data_points_top_match_details"
                android:textColor="@color/Blue" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_match_number_display"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/match_number_match_details"
            android:textSize="50sp"
            android:layout_weight="2"
            android:textStyle="bold">

        </TextView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_header_four"
                style="@style/tv_data_points_top_match_details"
                android:textColor="@color/Red" />

            <TextView
                android:id="@+id/tv_header_five"
                style="@style/tv_data_points_top_match_details"
                android:textColor="@color/Red" />

            <TextView
                android:id="@+id/tv_header_six"
                style="@style/tv_data_points_top_match_details"
                android:textColor="@color/Red" />

        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/view_separator_horizontal"
        android:layout_height="3dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="3dp">
                    <TextView
                        style="@style/tv_team_number_match_details"
                        android:layout_weight="2"
                        android:text="Team"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/tv_team_one_label"
                        style="@style/tv_team_number_match_details"
                        android:textColor="@color/Blue"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tv_team_two_label"
                        style="@style/tv_team_number_match_details"
                        android:textColor="@color/Blue"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tv_team_three_label"
                        style="@style/tv_team_number_match_details"
                        android:textColor="@color/Blue"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tv_team_four_label"
                        style="@style/tv_team_number_match_details"
                        android:textColor="@color/Red"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tv_team_five_label"
                        style="@style/tv_team_number_match_details"
                        android:textColor="@color/Red"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tv_team_six_label"
                        style="@style/tv_team_number_match_details"
                        android:textColor="@color/Red"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10"
                    android:orientation="horizontal">
                    <ListView
                        android:id="@+id/lv_match_details"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:layout_gravity="center"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_match_details_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/bottom_nav_match_details_menu"/>

</LinearLayout>
