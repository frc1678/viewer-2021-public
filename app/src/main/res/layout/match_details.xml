<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                style="@style/tv_data_points_top_match_details"
                android:textColor="@color/Red"
                />
            <TextView
                style="@style/tv_data_points_top_match_details"
                android:textColor="@color/Red"
                />
            <TextView
                style="@style/tv_data_points_top_match_details"
                android:textColor="@color/Red"
                />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/match_number_match_details"
            android:textSize="75dp"
            android:gravity="center">

        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="3">

            <TextView
                style="@style/tv_data_points_top_match_details"
                android:textColor="@color/Blue"
                />
            <TextView
                style="@style/tv_data_points_top_match_details"
                android:textColor="@color/Blue"
                />
            <TextView
                style="@style/tv_data_points_top_match_details"
                android:textColor="@color/Blue"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/tv_team_number_match_details"
                        android:id="@+id/tv_team_one"
                       />

                    <ListView
                        android:id="@+id/lv_team_one"
                        android:layout_below="@+id/tv_team_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </RelativeLayout>


            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/tv_team_number_match_details"
                        android:id="@+id/tv_team_four"
                        />

                    <ListView
                        android:id="@+id/lv_team_four"
                        android:layout_below="@+id/tv_team_four"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </RelativeLayout>

            </FrameLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/tv_team_number_match_details"
                        android:id="@+id/tv_team_two"
                        />

                    <ListView
                        android:id="@+id/lv_team_two"
                        android:layout_below="@+id/tv_team_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </RelativeLayout>

            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/tv_team_number_match_details"
                        android:id="@+id/tv_team_five"
                        />

                    <ListView
                        android:id="@+id/lv_team_five"
                        android:layout_below="@+id/tv_team_five"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </RelativeLayout>

            </FrameLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/tv_team_number_match_details"
                        android:id="@+id/tv_team_three"
                        />

                    <ListView
                        android:id="@+id/lv_team_three"
                        android:layout_below="@+id/tv_team_three"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </RelativeLayout>

            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/tv_team_number_match_details"
                        android:id="@+id/tv_team_six" />

                    <ListView
                        android:id="@+id/lv_team_six"
                        android:layout_below="@+id/tv_team_six"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </RelativeLayout>

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>